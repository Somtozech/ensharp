{
	"compilerOptions": {
		"lib": ["es2018"],
		"module": "commonjs",
		"target": "es2018",
		"strict": true,
		"outDir": "./lib",
		"esModuleInterop": true,
		"declaration": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
